generator client {
  provider = "prisma-client-js"
  output   = "src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())


}

model Staff {
  id       String   @id @default(cuid())
  userId   String   @unique
  username String   @unique
  email    String   @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role     String   @default("staff")
  

  @@index([userId])
}

model Bookdb{
  id       String   @id @default(cuid())
  title    String
  author   String
  isbn     String   @unique
  publishedDate DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isbn])
}
model Schedules {
  id       String   @id @default(cuid())
  staffId  String
  bookId   String
  startTime DateTime
  endTime DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([staffId])
  @@index([bookId])
}